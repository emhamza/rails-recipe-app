<%= stylesheet_link_tag 'food_list', media: 'all' %>

<div class="food-list-container">
    <h1>Food List</h1>
    <div class = "btn-container"><%= link_to 'Add Food', '/foods/new', class: 'add-food-button' %></div>

    <table class="food-list-table">
        <tr>
            <th>Food</th>
            <th>Measurement Unit</th>
            <th>Unit Price</th>
            <th>Actions</th>
        </tr>
        <tbody>
            <% @food.each do |food| %>
                <tr>
                    <td><%= link_to "#{food.name}", food_path(food.id), class: 'food-link' %></td>
                    <td><%= food.measurement_unit %></td>
                    <td>$<%= food.price %></td>
                    <td><%= button_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: 'delete-button' %></td>
                </tr>    
            <% end %>
        </tbody>
    </table>
</div>